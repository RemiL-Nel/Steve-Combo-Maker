rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
      
      // Allow public read access to previews
      match /previews/{comboId} {
        allow read: true;
        allow write: if request.auth != null;
      }
    }
  }
}
